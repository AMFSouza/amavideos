// Para detalhes de formato, veja https://aka.ms/devcontainer.json. Para opções de configuração, veja o README em: https://github.com/devcontainers/templates/tree/main/src/docker-existing-docker-compose
{
    "name": "net8-amavideos",

    // Atualize a lista 'dockerComposeFile' se você tiver mais arquivos compose ou usar nomes diferentes.
    // O arquivo .devcontainer/docker-compose.yml contém quaisquer substituições que você precise/deseje fazer.
    "dockerComposeFile": [
        "../docker-compose.dev.yml"
        
    ],

    // A propriedade 'service' é o nome do serviço para o container que o VS Code deve usar.
    // Atualize este valor e .devcontainer/docker-compose.yml para o nome real do serviço.
    "service": "app",

    // A propriedade opcional 'workspaceFolder' é o caminho que o VS Code deve abrir por padrão quando conectado.
    // Este é tipicamente um ponto de montagem de arquivo em .devcontainer/docker-compose.yml
    "workspaceFolder": "/app",

    // Funcionalidades para adicionar ao dev container. Mais informações: https://containers.dev/features.
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {},
        "ghcr.io/devcontainers-contrib/features/zsh-plugins:0":{},
        "ghcr.io/stuartleeks/dev-container-features/shell-history:0":{}
    },
    
    // Use 'forwardPorts' para fazer uma lista de portas dentro do container disponíveis localmente.
    "forwardPorts": [5000, 5001],

    // Descomente a próxima linha se quiser iniciar serviços específicos em sua configuração Docker Compose.
    // "runServices": [],

    // Descomente a próxima linha se quiser manter seus containers rodando após o VS Code ser fechado.
    "shutdownAction": "stopCompose",

    // Descomente a próxima linha para executar comandos após a criação do container.
    // "postCreateCommand": "cat /etc/os-release",

    // Configure propriedades específicas de ferramentas.
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-dotnettools.csharp",
                "ms-dotnettools.csdevkit",
                "ms-azuretools.vscode-docker",
                "ms-python.python"
             ]
        }
    },
    "postCreateCommand": "",
    "remoteUser": "vscode"
}